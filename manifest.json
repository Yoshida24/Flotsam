{
    "name": "Flotsam",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Sample Chrome Extension",
    "browser_action":{
        "default_popup":"popup.html"
    },
    "icons": {
        "16": "icon16.jpeg",
        "48": "icon48.jpeg",
        "128": "icon128.jpeg"
    },
    "content_scripts": [
        {
            "matches": [ "http://*/*", "https://*/*" ],
            "js": [ 
                "observeDom.js",
                "insertElement.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
